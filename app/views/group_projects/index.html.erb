<div id="all" class="category">
	<% @projects.each do |project| %>
	<div id="<%= project.name.downcase.gsub(/ /,'_') %>" class="category">
		<h2><%= project.name.html_safe %></h2>
		<p><%= project.description.html_safe %></p>
		
		<% project.images.each do |image| %>
			<%= image_tag("https://s3.amazonaws.com/uwdesign2011/images/content/projects/large/#{image.image_url.html_safe}", :alt => image.image_url )%>
		<% end %>
		
		<ul>
		<% project.people.each do |p| %>
			<li><%= link_to "#{p.fname} #{p.lname}", person_path(p.id)  %></li>
		<% end %>
		</ul>
	</div>
	<% end %>
	
	<div class="clear"></div>
</div> <!-- end #all -->
<div id="projects_end"></div>
<div class="clear"></div>

