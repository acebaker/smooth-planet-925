<p id="person_about"><%= @person.about.html_safe %></p>

<% @person.projects.each do |project| %>
	<div id="<%= project.name.downcase.gsub(/ /,'_').gsub(/:/,'').html_safe %>" class="project">
		<h2><%= project.name.html_safe %></h2>
		<p class="description"><%= project.description.html_safe %></p>
		
		<div class="media">
			<% project.videos.each do |video| %>
			<div class="video">
				<iframe src="http://player.vimeo.com/video/<%= video.vimeonumber %>?byline=0&amp;portrait=0&amp;color=ffffff" width="700" height="394" frameborder="0"></iframe>
			</div>
			<% end %>
			
			
		<% if project.isGroup == 1 %>
			<p class="alert group">Is group!</p>
			<% project.group_project.each do |d| %>
			
				<% d.images.each do |i| %>
				<div class="image">
					<%= image_tag("https://s3.amazonaws.com/uwdesign2011/images/content/projects/large/#{i.image_url}", :alt => i.image_url )%>
				</div>
				<% end %>
				
				<ul class="group_members">
				<% d.people.sort! { |a,b| a.lname.downcase <=> b.lname.downcase }.each do |p| %>
					<% if p.id != @person.id %>
					<li><%= link_to "#{p.fname} #{p.lname}", person_path(p.id)  %></li>
					<% end %>
				<% end %>
				</ul>
			<% end %>
		<% else %>
			<p class="alert">Isn't group!</p>
			
			
			<div class="image">
			<% project.images.each do |image| %>
				<%= image_tag("https://s3.amazonaws.com/uwdesign2011/images/content/projects/large/#{image.image_url}", :alt => image.image_url )%>
			<% end %>
			</div>
		<% end %>
		</div> <!-- end .media -->
		
		

		<h4 class="see_more">See more projects in:</h4>
		<ul>
			<% project.categories.each do |category| %>
			<li><%= link_to category.name + " Design", projects_path(:anchor => category.name.downcase) %></li>
			<% end %>
		</ul>
		<div class="clear"></div>
	</div> <!-- end #<%= project.name.downcase.gsub(/ /,'_') %> -->
<% end %>
<div id="projects_end"></div>
<div class="clear"></div>