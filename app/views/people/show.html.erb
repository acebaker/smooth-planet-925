<div id="person_info">

	<h2 id="person_name"><%= @person.fname %> <br /><%= @person.lname %></h2>
	<div id="person_image">
		<%= image_tag("content/people/profiles/Profile_#{@person.lname}.jpg", :alt => @person.lname, :width => "150px" )%>
	</div>

</div> <!-- end #person_info -->

<p id="person_about"><%= @person.about %></p>

<div id="all">
	<% @person.projects.each do |project| %>
	<div class="work">
		<%= link_to image_tag("content/projects/thumbnails/#{project.thumb_url}", :alt => project.name ), person_path(@person, :anchor => project.name.downcase.gsub(/ /,'_')), :class => "scroll" %>
	</div>
	<% end %>
</div>

<% @person.projects.each do |project| %>
	<div id="<%= project.name.downcase.gsub(/ /,'_') %>" class="project"><h2><%= project.name %></h2>
		<p class="description"><%= project.description %></p>
		<div id="images">
			<% project.images.each do |image| %>
				<%= image_tag("content/projects/large/#{image.image_url}", :alt => image.image_url )%>
			<% end %>
		</div>
		<h4 class="social">
			<a href="http://www.facebook.com/sharer.php?u=http://uwdesign2011.com<%= person_path(@person, :anchor => project.name.downcase.gsub(/ /,'_')) %>&t=<%= project.name %>" ><img title="FaceBook : <%= project.name %> : http://uwdesign2011.com<%= person_path(@person, :anchor => project.name.downcase.gsub(/ /,'_')) %>" src="http://www.PerlitaLabs.com/Social_Bookmark_Builder_1_2/icons/24/facebook.png" alt="Add to FaceBook" /></a>
			<a href="http://www.stumbleupon.com/submit?url=mad_ones_url&title=Mad Ones" ><img title="StumbleUpon : Mad Ones : mad_ones_url" src="http://www.PerlitaLabs.com/Social_Bookmark_Builder_1_2/icons/24/stumbleupon.png" alt="Add to StumbleUpon" /></a>
			
			<a href="http://twitter.com/home?status=http://uwdesign2011.com<%= person_path(@person, :anchor => project.name.downcase.gsub(/ /,'_')) %>" ><img title="Twitter : Mad Ones : http://uwdesign2011.com<%= person_path(@person, :anchor => project.name.downcase.gsub(/ /,'_')) %>" src="http://www.PerlitaLabs.com/Social_Bookmark_Builder_1_2/icons/24/twitter.png" alt="Add to Twitter" /></a>
		</h4>
	
		<h4 class="see_more">See more projects in:<br />
			<ul>
				<% project.categories.each do |category| %>
				<li><%= link_to category.name + " Design", projects_path(:anchor => category.name.downcase) %></li>
				<% end %>
			</ul>
		</h4>
		<div class="clear"></div>
	</div> <!-- end #<%= project.name.downcase.gsub(/ /,'_') %> -->
<% end %>