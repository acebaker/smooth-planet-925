<!DOCTYPE html>

<html>
	<head>
	  	<title><%= title %></title>
		<%= render 'layouts/stylesheets' %>
		<%= javascript_include_tag :all %>
		<!--[if lt IE 9]>
		<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
		
		<![endif]-->
		<%= render 'layouts/analytics' %>
		<%= csrf_meta_tag %>
		
		<style type="text/css">
			nav#main ul li a#<%= @active_nav %> {
				border-top: solid 5px;
				padding-top: 5px;
				border-color: black;
				font-weight:bold;
			}
		</style>
		
	</head>
	<body>
		<div id="container">
			<%= render 'layouts/header' %>
			<div id="content">
				<%= yield %>
				<a href='#all' id="bottom"class="scroll">Back to Top</a>
			</div> <!-- end #content -->
		</div> <!-- end #container -->
	</body>
</html>
